# ChurchConnect Event Manager Environment Variables
# Copy this file to .env and fill in your values

# PWA Configuration
REACT_APP_VAPID_PUBLIC_KEY=your_vapid_public_key_here
REACT_APP_VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Email Configuration (for future email notification system)
REACT_APP_EMAIL_API_KEY=your_email_api_key_here
REACT_APP_EMAIL_FROM_ADDRESS=noreply@yourchurch.com

# Analytics (for future analytics dashboard)
REACT_APP_ANALYTICS_TRACKING_ID=your_analytics_id_here

# Redis Configuration (for future caching and background jobs)
REACT_APP_REDIS_URL=redis://localhost:6379

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=30000

# Feature Flags
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_ANALYTICS=false

# PWA Settings
REACT_APP_PWA_NAME=ChurchConnect Event Manager
REACT_APP_PWA_SHORT_NAME=ChurchConnect
REACT_APP_PWA_THEME_COLOR=#2563eb
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info
